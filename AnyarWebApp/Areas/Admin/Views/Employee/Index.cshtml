@model List<EmployeeGetDto>
@{
    ViewData["Title"] = "Index";
}
<div>
    <a asp-action="Create" asp-controller="Employee" asp-area="Admin">
        <i class="fa-solid fa-plus"></i>
    </a>
</div>
<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">Recent Purchases</p>
                <div class="table-responsive">
                    <table id="recent-purchases-listing" class="table">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>Position</th>
                                <th>Image</th>

                            </tr>
                        </thead>
                        @if (Model != null)
                        {
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Position</td>
                                        <td><img src="~/assets/img/@item.Image" /></td>
                                        <td>
                                            <a asp-action="Update" asp-controller="Employee" asp-route-id="@item.Id">
                                                <i class="fa-solid fa-pen"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


